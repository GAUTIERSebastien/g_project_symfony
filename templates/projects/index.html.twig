{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mt-4 mb-4">{{ controller_name }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <!-- Ajout du bouton pour créer un nouveau projet -->
            <a href="{{ path('project_new') }}" class="btn btn-primary mb-4">Créer un nouveau projet</a>
            
            <ul class="list-group">
            {% for project in projects %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ project.title }}
                    <div>
                        <!-- Bouton de modification pour chaque projet -->
                        <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-warning mr-2">Modifier</a>
                        <!-- Bouton de suppression pour chaque projet -->
                        <a href="{{ path('project_delete', {'id': project.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?');">Supprimer</a>
                    </div>
                </li>
            {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
